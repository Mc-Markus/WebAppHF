@model WebAppHF.Models.Record

<div class="row">
    <div class="col-md-6">
        <h1>Booking a Restaurant</h1>
        <p>Make a reservation below. </p>
    </div>
</div>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-6">
            <form>
                <div class="row">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(m => m.EventID, new { @Value = ViewBag.RestaurantID })
                    <div class="form-group">
                        @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control form-width-amount" } })
                            @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.DropDownList("date", new SelectList(ViewBag.selectTimeList, "Value", "Text"), "Choose a Day", htmlAttributes: new { @class = "btn btn-primary main-btn dropdown-toggle" })
                    </div>
                    <div class="form-group">
                        @Html.DropDownList("time", new SelectList(ViewBag.selectDayList, "Value", "Text"), "Choose a Time", htmlAttributes: new { @class = "btn btn-primary main-btn dropdown-toggle" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Comment, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Comment, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
                    </div>
                </div>
                <input type="submit" value="Create" class="btn btn-default" />
            </form>
        </div>
        <div class="col-md-6"> <img src="~/IMG/patronaat1.jpg" class="img-fluid" alt="Responsive image"> </div>
    </div>


}






