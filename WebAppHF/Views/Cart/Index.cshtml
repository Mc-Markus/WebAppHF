@model List<WebAppHF.Models.DisplayRecord>
@using WebAppHF.Models


<div class="container col-md-12" id="main-body">
    <div class="row">
        <div class="col-md-6">
            <h1>Your shopping basket</h1>
            <p>In this page you can view and edit the items in your basket.</p>
        </div>
        <div class="col-md-2"> <img src="../images/patronaat1.jpg" class="img-fluid  topside-images" alt="Responsive image"> </div>
        <div class="col-md-2"> <img src="../images/patronaat2.jpg" class="img-fluid  topside-images" alt="Responsive image"> </div>
        <div class="col-md-2"> <img src="../images/patronaat3.jpg" class="img-fluid  topside-images" alt="Responsive image"> </div>
    </div>
    <hr>
    <div class="row basket-send-padding">
        <div class="col-md-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Tickets</th>
                        <th scope="col">Event</th>
                        <th scope="col">Date and time</th>
                        <th scope="col">Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DisplayRecord displayRecord in Model)
                    {
                        <tr>
                            <th scope="row">@displayRecord.Record.Amount</th>
                            <td>@displayRecord.Event.Name</td>
                            <td>@displayRecord.Event.Date.ToShortDateString() | @displayRecord.Event.StartTime.ToShortTimeString()</td>
                            <td>@displayRecord.Event.Price</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="row basket-send-padding">
        <div class="col-md-10"> </div>
        <div class="col-md-2">
            <button class="btn btn-primary main-btn">Next Step</button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <p><strong>You could also..</strong></p>
        </div>
