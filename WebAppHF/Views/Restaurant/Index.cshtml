@model IEnumerable<WebAppHF.Models.Restaurant>

@{
    ViewBag.Title = "Dinner";
}
<div class="row">
    <div class="col-md-6">
        <h1>Dinner in Haarlem</h1>
        <p>Dinner in Haarlem makes it easy for you to find a restaurant in the centrum of Haarlem. On this page you will find all the participating restaurants and a little bit of information about them. For each restaurant there are three timeslots, which can be found by pressing the information button of your desired restaurant. The price shown on this page is the normal price, for children under 12 years there is a reduced price. This price can also be found by pressing the information button. </p>
    </div>
    <div class="col-md-2"> <img src="../images/patronaat1.jpg" class="img-fluid  topside-images" alt="Responsive image"> </div>
    <div class="col-md-2"> <img src="../images/patronaat2.jpg" class="img-fluid  topside-images" alt="Responsive image"> </div>
    <div class="col-md-2"> <img src="../images/patronaat3.jpg" class="img-fluid  topside-images" alt="Responsive image"> </div>
</div>
<hr>
<div class="row filter-row">
    <div class="col-md-6">
        <h3 class="filter-text">Cuisine</h3>
    </div>
    <div class="col-md-6">
        @using (Html.BeginForm("Index", "Restaurant", FormMethod.Post))
        {
            @Html.DropDownList("foodType", new SelectList(ViewBag.foodTypes, "Value", "Text"), "--- Please Choose an Item! ---", htmlAttributes: new { @class = "form-group" })
            <input type="submit" value="Filter" />
        }
    </div>
</div>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3 image-dinner">
            <img src="../images/patronaat1.jpg" class="img-fluid" alt="Responsive image">
            <h4 class="dag-header">@Html.DisplayFor(modelIem => item.Name)</h4>
            <p>
                <b>Cuisine:</b> @Html.DisplayFor(modelItem => item.FoodTypes)
                <br> <b>Rating:</b> @Html.DisplayFor(modelItem => item.Stars)
                <br> <b>Price:</b> &euro;@Html.DisplayFor(modelItem => item.Price)
            </p>
            <button type="button" class="btn btn-primary main-btn"><span class="label label-default">Info</span></button>
            <button type="button" class="btn btn-primary main-btn">Make a Reservation</button>
        </div>
    }

</div>
